{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": ".build",
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es5",
  },
}
